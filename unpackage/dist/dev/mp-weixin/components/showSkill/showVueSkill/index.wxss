.container {
  width: 100%;
  position: relative;
  height: 550rpx;
}
.input_model {
  border: 1px solid black;
  width: 220rpx;
}
.text_area {
  width: 100%;
  border: 2px solid orange;
  height: 110rpx;
}
.fenyeqi {
  position: absolute;
  bottom: 0;
  left: 96rpx;
}
.scroll-con {
  height: 500rpx;
}
.scroll-con .article_main {
  display: flex;
  width: 100%;
  height: 150rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #ddd;
}
.scroll-con .article_main .article_main_left {
  flex: 30%;
}
.scroll-con .article_main .article_main_left image {
  width: 80%;
  height: 80%;
  display: block;
  margin: 0 auto;
  margin-top: 16rpx;
  border-radius: 65rpx;
}
.scroll-con .article_main .article_main_right {
  flex: 70%;
  display: flex;
  flex-direction: column;
}
.scroll-con .article_main .article_main_right .right_title {
  flex: 70%;
  font-size: 25rpx;
  font-weight: 700;
  font-family: icon-font;
  margin-top: 12rpx;
}
.scroll-con .article_main .article_main_right .right_title .neirong:hover {
  text-decoration: underline;
  color: #007AFF;
}
.scroll-con .article_main .article_main_right .right_bottom {
  flex: 30%;
}
.scroll-con .article_main .article_main_right .right_bottom .right_bottom_left {
  float: left;
  font-size: 18rpx;
}
.scroll-con .article_main .article_main_right .right_bottom .right_bottom_right {
  float: right;
  margin-right: 6rpx;
  font-size: 22rpx;
}
.abc:hover {
  cursor: pointer;
  color: blue;
  text-decoration: underline;
}

