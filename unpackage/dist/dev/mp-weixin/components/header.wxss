.container {
  display: flex;
  width: 100%;
}
.container .photo {
  flex: 30%;
  height: 150rpx;
}
.container .photo image {
  width: 70%;
  height: 80%;
  margin: 0 auto;
  display: block;
  margin-top: 15rpx;
  margin-left: 45rpx;
}
.container .name {
  flex: 20%;
  height: 150rpx;
  padding: 0 10rpx;
  line-height: 80rpx;
}
.container .name .name_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 150rpx;
  font-size: 30rpx;
  justify-content: center;
}
.container .name .name_view .name_title {
  font-size: 45rpx;
  font-weight: 700;
}
.container .name .name_view .name_show {
  margin-top: -25rpx;
}
.container .about {
  display: flex;
  flex-direction: column;
  flex: 50%;
  height: 150rpx;
  font-size: 24rpx;
  justify-content: center;
  padding: 0 20rpx;
}

